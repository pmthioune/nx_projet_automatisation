Sub CopyAndRedefineRange()
    Dim ws As Worksheet
    Dim originalRange As Range
    Dim newRange As Range
    Dim targetCell As Range
    Dim namedRange As Name
    Dim cellName As String

    ' Set the active worksheet
    Set ws = ActiveSheet

    ' Check if the name "plage_transitions_matrice" exists
    On Error Resume Next
    Set namedRange = ThisWorkbook.Names("plage_transitions_matrice")
    On Error GoTo 0

    If namedRange Is Nothing Then
        MsgBox "The name 'plage_transitions_matrice' does not exist.", vbExclamation
        Exit Sub
    End If

    ' Define the original range
    Set originalRange = namedRange.RefersToRange

    ' Copy the original range and paste it three rows below
    Set newRange = originalRange.Offset(originalRange.Rows.Count + 3, 0)
    originalRange.Copy Destination:=newRange

    ' Redefine the name "plage_transitions_matrice" to the new range
    namedRange.RefersTo = newRange

    ' Define the name for the cell at the 3rd column and 6th row of the new range
    Set targetCell = newRange.Cells(6, 3)
    cellName = "Target_Cell_Name" ' Replace with the desired name
    ThisWorkbook.Names.Add Name:=cellName, RefersTo:=targetCell

    MsgBox "The range has been copied, and the names have been updated successfully.", vbInformation
End Sub
